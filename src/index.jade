- // https://github.com/sindresorhus/pretty-bytes
- var prettyBytes = function( num ) {
-   var exponent;
-   var unit;
-   var neg = num < 0;
-   var units = ['B', 'kB', 'MB', 'GB', 'TB', 'PB', 'EB', 'ZB', 'YB'];
-
-   if (neg) {
-   	num = -num;
-   }
-
-   if (num < 1) {
-   	return (neg ? '-' : '') + num + ' B';
-   }
-
-   exponent = Math.min(Math.floor(Math.log(num) / Math.log(1000)), units.length - 1);
-   num = Number((num / Math.pow(1000, exponent)).toFixed(2));
-   unit = units[exponent];
-
-   return (neg ? '-' : '') + num + ' ' + unit;
- }

mixin tableData(data, prev)
	- var change = prev ? ( data - prev ) : 0;
	- var sign = change > 0 ? "+" : change < 0 ? "-" : "";
	if data
		td
			| #{data.toLocaleString()}&nbsp;
			span bytes<br/>(#{prettyBytes( data )})
			i(class="#{ change > 0	 ? 'decrease' : 'increase'}") Î” #{ sign }#{ prettyBytes(Math.abs(change)) }
	else
		td
			&ndash;

